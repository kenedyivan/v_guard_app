<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="acceptButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorButtonNormal">#64FFDA</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">1dip</item>
    </style>

    <style name="declineButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorButtonNormal">#B71C1C</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">1dip</item>
    </style>

    <style name="loginButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">1dip</item>
    </style>

    <style name="guardButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorButtonNormal">#03A9F4</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">1dip</item>
    </style>

    <style name="CustomLoginDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Logging in…</item>
        <item name="DialogSpotColor">@android:color/holo_red_dark</item>
        <item name="DialogSpotCount">4</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomSignUpDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Signing up…</item>
        <item name="DialogSpotColor">@android:color/holo_red_dark</item>
        <item name="DialogSpotCount">4</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="requestGuardButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorButtonNormal">@color/requestGuardButton</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">1dip</item>
    </style>

</resources>
