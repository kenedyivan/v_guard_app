<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.project.ken.vecurityguard.GuardTrackingActivity" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/crdCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:visibility="gone"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/shield"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/defense_shield" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="62dp"
                        android:layout_marginStart="62dp"
                        android:layout_toEndOf="@+id/done"
                        android:layout_toRightOf="@+id/done"
                        android:text="00:00:00"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="89dp"
                        android:layout_marginStart="89dp"
                        android:text="done!"
                        android:textSize="30sp"
                        android:visibility="gone" />
                </RelativeLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/btnStartGuarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageExpandable"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:paddingBottom="21dp"
            android:paddingTop="21dp"
            android:text="Start guarding"
            android:textStyle="bold"
            android:theme="@style/guardButtonTheme" />

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>